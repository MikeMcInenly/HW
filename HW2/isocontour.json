{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A contour plot of the Upper Geyser Basin, Yellowstone.",
  "width": 500,
  "autosize": "none",

  "signals": [
    {
      "name": "grid",
      "init": "data('elevation')[0]"
    },
    {
      "name": "height",
      "update": "round(grid.height * width / grid.width)"
    },
    {
      "name": "smooth", "value": true,
      "bind": {"input": "radio", "options": [true, false]}
    }
  ],

  "data": [
    {
      "name": "elevation",
      "url": "data/OldFaithful.json"
    },
    {
      "name": "contours",
      "source": "elevation",
      "transform": [
        {
          "type": "isocontour",
          "scale": {"expr": "width / datum.width"},
          "smooth": {"signal": "smooth"},
          "thresholds": {"signal": "sequence(2200, 2500, 15)"}
        }
      ]
    }
  ],


  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": [2200, 2490],
      "range": {"scheme": "redinvert"}
    }
  ],

  "marks": [
    {
      "type": "path",
      "from": {"data": "contours"},
      "encode": {
        "enter": {
          "stroke": {"value": "#ccc"},
          "strokeWidth": {"value": 1},
          "fill": {"scale": "color", "field": "contour.value"}
        }
      },
      "transform": [
        {
          "type": "geopath",
          "field": "datum.contour"
        }
      ]
    }
  ]
}